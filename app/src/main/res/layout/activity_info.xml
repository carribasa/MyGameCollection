<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo8"
    tools:context=".vista.activity_info">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="325dp"
        android:layout_height="572dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="41dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_gravity="center|center_vertical"
            android:fontFamily="@font/audiowide"
            android:gravity="center|center_vertical"
            android:text="myGameCollection"
            android:textSize="32sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvPie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvMGC"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/ivLogo2"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_gravity="center|center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/tvPie"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.62"
            app:srcCompat="@drawable/iconomain" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="Esta app esta diseñada para toda esa gente que quiere recordar cada una de esas historias vividas en todas esos mundos ficticios en los que alguna vez ha vivido una experiencia tan increible como única. Para toda esa gente, gracias por usar esta aplicación y por hacer del mundo &quot;gamer&quot; un universo compartido tan especial."
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center|center_horizontal|center_vertical"
            android:text="App desarrollada por el estudio © Charle'sTech Madrid (Madrid) 28007 - C/ de la Industria, s/n"
            android:textColor="#FFFFFF" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="-160dp"
            tools:layout_editor_absoluteY="505dp">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/iconoandroid" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="Apple Strore" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="205dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="Google Play" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="197dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/iconoapple" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tvPie3"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:foregroundGravity="bottom"
        android:gravity="bottom|center"
        android:text="V 0.1.0 - All Rights Reserved - © Charle'sTech 12.2022 "
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>